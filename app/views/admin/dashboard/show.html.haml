.row
  .col-md-12
    .page-header
      %h2 User
      = link_to '+ Create new user', new_admin_user_path, class: 'label label-default'

    %table.table
      %thead
        %th ID
        %th Name
        %th Password
        %th &nbsp;

      %tbody
        - User.order('name ASC').each do |user|
          %tr{ class: user.admin? ? 'success' : nil}
            %td= content_tag :code, user.id
            %td= user.name
            %td= content_tag :code, user.chip_id
            %td
              = link_to edit_admin_user_path(user), class: 'label label-default' do
                %span.glyphicon.glyphicon-cog
                Edit User
